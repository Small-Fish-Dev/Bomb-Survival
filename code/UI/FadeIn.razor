@using Sandbox.UI;

@namespace BombSurvival
@inherits Panel

<style>
	FadeIn {
		z-index: 999;
		
		position: absolute;
		width: 100%;
		height: 100%;
		
		background-color: black;
	
		opacity: 1;
		
		&:outro {
			opacity: 0;
		}
		
		transition: all 1.5s ease;
	}
</style>

@code {
	
	public override void Tick()
	{
		base.Tick();
		
		if ( ComputedStyle == null )
			return;

		if ( ComputedStyle.Transitions.List.Count == 0 )
			return;

		Delete();
	}

}
